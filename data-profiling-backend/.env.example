# Application Settings
APP_NAME=Data Profiling Utility
APP_VERSION=1.0.0
DEBUG=True
API_V1_PREFIX=/api/v1

# Server Configuration
HOST=0.0.0.0
PORT=8000

# Oracle Metadata Database
ORACLE_HOST=localhost
ORACLE_PORT=1521
ORACLE_SERVICE_NAME=XEPDB1
ORACLE_USER=profiler_admin
ORACLE_PASSWORD=your_password_here

# Redis Configuration (for async jobs)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0

# File Storage
RESULTS_BASE_PATH=/app/profiling_results
RESULTS_RETENTION_DAYS=90

# Security
SECRET_KEY=your-secret-key-here-change-in-production
ENCRYPTION_KEY=your-encryption-key-here-32-bytes

# CORS
CORS_ORIGINS=http://localhost:5173,http://localhost:3000

# Profiling Configuration
MAX_CONCURRENT_JOBS=10
DEFAULT_TOP_N_VALUES=10
MAX_PREVIEW_ROWS=100
